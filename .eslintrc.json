{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "html"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "hljs": "readonly",
    "marked": "readonly",
    "DOMPurify": "readonly",
    "newConversationForm": "readonly",
    "chatCompletionForm": "readonly",
    "conversationHistory": "readonly",
    "grecaptcha": "readonly"
  }
  }